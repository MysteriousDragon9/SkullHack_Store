<div class="container mt-4">
  <%= page_title "My Orders" %>
  <%= breadcrumbs(["Home", root_path], ["Orders", nil]) %>

  <% if @orders.any? %>
    <table class="table table-hover align-middle shadow-sm" role="table">
      <thead class="table-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Placed</th>
          <th scope="col">Status</th>
          <th scope="col" class="text-end">Total</th>
          <th scope="col" class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td scope="row"><%= order.id %></td>
            <td><%= l(order.created_at, format: :short) %></td>
            <td>
              <% status = order.status.presence || "pending" %>
              <span class="badge <%= badge_class_for(status) %>">
                <%= status.to_s.titleize %>
              </span>
            </td>
            <td class="text-end"><%= number_to_currency(order.total) %></td>
            <td class="text-end">
              <%= link_to "View", order_path(order),
                          class: "btn btn-sm btn-outline-primary",
                          aria: { label: "View order ##{order.id}" } %>
              <% if order.pending? %>
                <%= link_to "Pay", pay_order_path(order),
                            class: "btn btn-sm btn-success ms-1",
                            aria: { label: "Pay order ##{order.id}" } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="d-flex justify-content-center mt-3">
      <%= paginate @orders %>
    </div>
  <% else %>
    <div class="empty-state text-center py-5">
      <i class="bi bi-box-seam display-4 text-muted"></i>
      <h5>No past orders</h5>
      <p class="text-muted">You havenâ€™t placed any orders yet. Browse products to get started.</p>
      <%= link_to "Browse Products", products_path, class: "btn btn-primary mt-2" %>
    </div>
  <% end %>
</div>
