<fieldset class="mb-4">
  <legend>Shipping Information</legend>

  <div class="mb-3">
    <%= f.label :address, "Address", class: "form-label" %>
    <%= f.text_field :address, class: "form-control", required: true, aria: { label: "Street address" } %>
    <% if @user.errors[:address].any? %>
      <div class="text-danger"><%= @user.errors[:address].join(", ") %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :province_id, "Province", class: "form-label" %>
    <%= f.collection_select :province_id, @provinces, :id, :name,
                            { prompt: "Select a province" },
                            { class: "form-select", required: true, aria: { label: "Province" } } %>
    <% if @user.errors[:province_id].any? %>
      <div class="text-danger"><%= @user.errors[:province_id].join(", ") %></div>
    <% end %>
  </div>
</fieldset>
