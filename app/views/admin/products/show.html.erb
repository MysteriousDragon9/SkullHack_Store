<h1><%= @product.name %></h1>

<p><strong>Category:</strong> <%= @product.category&.name || "-" %></p>
<p><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>

<p><strong>Stock:</strong>
  <% if @product.stock_quantity > 0 %>
    <span class="badge bg-success">In Stock (<%= @product.stock_quantity %>)</span>
  <% else %>
    <span class="badge bg-danger">Out of Stock</span>
  <% end %>
</p>

<% if @product.on_sale %>
  <p><span class="badge bg-danger">On Sale</span></p>
<% end %>

<% if @product.description.present? %>
  <p><strong>Description:</strong> <%= simple_format(@product.description) %></p>
<% end %>

<% if @product.image.attached? %>
  <%= image_tag @product.image.variant(resize_to_limit: [400, 400]),
                class: "img-fluid mt-2",
                alt: "Image of #{@product.name}" %>
<% end %>

<div class="mt-3">
  <%= link_to "Edit", edit_admin_product_path(@product), class: "btn btn-primary me-2" %>
  <%= link_to "Back", admin_products_path, class: "btn btn-secondary" %>
</div>
