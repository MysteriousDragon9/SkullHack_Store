<h1>Admin Dashboard</h1>

<div class="container mt-4">
  <div class="row">
    <% { "Products" => @products_count, "Orders" => @orders_count, "Categories" => @categories_count }.each do |label, count| %>
      <div class="col-md-4 mb-3">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title"><%= label %></h5>
            <p class="card-text display-6"><%= count %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<nav class="mt-3" aria-label="Admin navigation">
  <%= link_to "Manage Products", admin_products_path, class: "btn btn-primary me-2" %>
  <%= link_to "Manage Categories", admin_categories_path, class: "btn btn-secondary me-2" %>
  <%= link_to "Manage Orders", admin_orders_path, class: "btn btn-outline-primary me-2" %>
  <%= link_to "Manage Pages", admin_pages_path, class: "btn btn-outline-secondary" %>
</nav>
